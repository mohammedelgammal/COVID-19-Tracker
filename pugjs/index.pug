doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title COVID-19 Tracker 
        link(rel="stylesheet", href="style/style.css")
    body
        include nav                
        header 
            .search-container 
                <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" color="#000"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
                input(type="text" placeholder="Search") 
            .user-container
                .chat 
                    <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" color="#000"><path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path></svg>
                .bell 
                    <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" color="#000"><path fill-rule="evenodd" d="M6 8a6 6 0 1112 0v2.917c0 .703.228 1.387.65 1.95L20.7 15.6a1.5 1.5 0 01-1.2 2.4h-15a1.5 1.5 0 01-1.2-2.4l2.05-2.733a3.25 3.25 0 00.65-1.95V8zm6 13.5A3.502 3.502 0 018.645 19h6.71A3.502 3.502 0 0112 21.5z"></path></svg>
                .user-avatar 
                    img(src="imgs/avatar.jpg", alt="avatar")
                    <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" color="#000"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>                    
        main 
            .select-section 
                .select-title
                    h1 Covid-19 Overview
                .select-box-container 
                    select
                        option(value="") Uttar Pradesh
                    select
                        option(value="") Select City
            .content-wrapper            
                .status-card#confirmed
                    span.title confirmed 
                    span.number 00,000,000
                    span.increment
                        <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" color="#000" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg>
                        .value 0,000
                    .graph-container            
                .status-card#active
                    span.title active 
                    span.number 00,000,000
                    span.increment
                        <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" color="#000" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg>
                        .value 0,000
                    .graph-container            
                .status-card#recovered
                    span.title recovered 
                    span.number 00,000,000
                    span.increment
                        <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" color="#000" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg>
                        .value 0,000
                    .graph-container            
                .status-card#decreased
                    span.title decreased 
                    span.number 00,000,000
                    span.increment
                        <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" color="#000" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg>
                        .value 0,000
                    .graph-container            
                .status-card#advice
                    img(src="imgs/sym00ptom.jpg", alt="Covid-19 Symptom")     
                .top-effected 
                    .title-section 
                        p Top Effected States 
                        .select-section 
                            .item.case Case
                            .item.deaths Deaths
                            .item.recovered Recovered
                    .table-section 
                        .table-header
                            p#state State
                            p#recovered Recovered
                            p#deaths Deaths
                            p#confirmed Confirmed
                        .table-data
                            p#state-data Maharastra
                            p#recovered-data 00,000,000
                            p#deaths-data 00,000,00
                            p#confirmed-data 00,00,000
                .statistics-consult-section
                    .statistics-section
                        .title-section 
                            p Statistics 
                            .select-section 
                                .item.monthly Monthly 
                                .item.weekly Weekly
                        .chart-container 
                        .stats-container
                            .section.top-section 
                                .color-container
                                .text-content
                                    p.top-text New Infected (India)
                                    p.bottom-num 0,000  
                            .section.middle-section 
                                .color-container
                                .text-content
                                    p.top-text New Recovered (India)
                                    p.bottom-num 0,000  
                            .section.lower-section 
                                .color-container
                                .text-content
                                    p.top-text New Decreased (India)
                                    p.bottom-num 0,000  
                    .consult-section        
                        .left-content 
                            p.cons-title Consultant Help 24 Hours
                            p.cons-text We are available 24 hours for you. Just call us anytime
                            button Call Us Now
                        .right-illust   
                            img(src="imgs/doctor.svg", alt="doctor") 





